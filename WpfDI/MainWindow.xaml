<Window x:Class="WPFDI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDI"
        xmlns:vms="clr-namespace:WPFDI.ViewModels"
        d:DataContext="{d:DesignInstance vms:MainViewModel}"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid VerticalAlignment="Center">
        <TextBlock TextAlignment="Center" Text="{Binding Content}"></TextBlock>
    </Grid>
</Window>
